<h3>Edit place</h3>
<form method="POST" action="/places/{{place._id}}">
    <input type="text" name="name" value="{{place.name}}"/>
    <select name="type">
        <option value="{{place.type}}" selected >{{place.type}}</option>
        <option value="coffe shop">coffe shop</option>
        <option value="bookstore">bookstore</option>
    </select>

    <input type="text" name="latitude" value="{{place.location.coordinates.[1]}}"/>
    <input type="text" name="longitude" value="{{place.location.coordinates.[0]}}"/>

    <input type="submit" name="" id="submit"/>
</form>
<a href="/places">Back to the list</a>